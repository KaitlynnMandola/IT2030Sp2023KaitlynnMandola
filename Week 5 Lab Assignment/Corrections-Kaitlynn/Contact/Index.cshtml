@*the following line is needed*@
@model ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<<h1>@ViewData["Title"]</h1>

<main class="container">
    <div class="row">
        <div class="col-md-4 col-sm-6">
            <h2>Address</h2>
            <p>13621 Sprecher Avenue</p>
            <p>Cleveland, OH 44135</p>

            <h2>Phone Number</h2>
            <p>(216)317-1206</p>

            <h2>Email</h2>
            <p>keyboardsandkilobytes@retailstore.com</p>
        </div>
        <div class="col-md-8 col-sm-6">
            <h2>Hours of Operation</h2>
            <p>Monday - Friday:     9 am - 9 pm</p>
            <p>Saturday:            9 am - 8 pm</p>
            <p>Sunday:             10 am - 6 pm</p>
        </div>

        @*A form is needed here*@
    <p>Fill out your information in the form below:</p>
    <form asp-action="Index" method="post">
    <div class="row form-group">
        <label asp-for="FirstName" class="col-md-3 col-form-label">First Name</label>
        <div class="col-md-3">
            <input asp-for="FirstName" class="form-control"/>
        </div>
        <span asp-validation-for="FirstName" class="col text-danger"></span>
    </div>
    <div class="row form-group">
         <label asp-for="LastName" class="col-md-3 col-form-label">Last Name</label>
         <div class="col-md-3">
            <input asp-for="LastName" class="form-control" />
         </div>
         <span asp-validation-for="LastName" class="col text-danger"></span>
    </div>
        <div class="row form-group">
         <label asp-for="Address" class="col-md-3 col-form-label">Address</label>
        <div class="col-md-3">
           <input asp-for="Address" class="form-control" />
        </div>
        <span asp-validation-for="Address" class="col text-danger"></span>
    </div>
        <div class="row form-group">
            <label asp-for="Phone" class="col-md-3 col-form-label">Phone</label>
            <div class="col-md-3">
                <input asp-for="Phone" class="form-control" />
            </div>
            <span asp-validation-for="Phone" class="col text-danger"></span>
        </div>
        <div class="row form-group">
            <label asp-for="Email" class="col-md-3 col-form-label">Email</label>
            <div class="col-md-3">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="col text-danger"></span>
        </div>
        <div class="row form-group">
            <label asp-for="Message" class="col-md-3 col-form-label">Message</label>
            <div class="col-md-3">
                <textarea asp-for="Message" class="form-control" rows="5"></textarea>
            </div>
            <span asp-validation-for="Message" class="col text-danger"></span>
        </div> 
        <div class="row">
            <div class="col-offset-md-3">
                <button type="submit" class="btn btn-primary"></button>
                <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                
            </div>
        </div>
       
</form>
    </div>
</main>


